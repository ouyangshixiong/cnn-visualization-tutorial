# CNN可视化教学项目 - 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# 虚拟环境配置
PYTHON_ENV=venv_linux

# PyTorch配置
PYTORCH_DEVICE=auto  # auto, cpu, cuda
PYTORCH_CACHE_DIR=./.cache/pytorch

# PaddlePaddle配置
PADDLE_DEVICE=auto   # auto, cpu, gpu
PADDLE_CACHE_DIR=./.cache/paddle

# 数据路径
DATA_DIR=./datasets
MODEL_DIR=./models
OUTPUT_DIR=./outputs

# 可视化配置
VISUALIZATION_DPI=300
VISUALIZATION_FORMAT=png  # png, jpg, pdf
SAVE_INTERMEDIATE=True

# 训练配置
BATCH_SIZE=16
NUM_EPOCHS=10
LEARNING_RATE=0.001

# Jupyter配置
JUPYTER_PORT=8888
JUPYTER_IP=localhost
JUPYTER_TOKEN=  # 留空表示无token

# 调试配置
DEBUG_MODE=False
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR